<div style="text-align: center;">
  <h2>Zarejestruj się</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'row') do |f| %>
  <%= devise_error_messages! %>

    <div class="field col col-sm-12">
      <%= f.label :email, 'Email' %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field col col-sm-12">
      <%= f.label :display_name, 'Wyświetlana nazwa' %><br />
      <%= f.text_field :display_name %>
    </div>

    <div class="field col col-sm-12">
      <%= f.label :password, 'Hasło' %>
      <% if @minimum_password_length %>
      <em>(przynajmniej <%= @minimum_password_length %> znaków)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field col col-sm-12">
      <%= f.label :password_confirmation, 'Powtórz hasło' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions col col-sm-12">
      <%= f.submit "Zarejstruj" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
