<div class="row player-row">
  <div class="col col-xs-3">
    <div class="input-group">
      <%= text_field_tag 'game[player][]', '', class: 'form-control player-field', placeholder: 'Gracz' %>
    </div>
  </div>
  <div class="col col-xs-3">
    <div class="input-group">
      <%= text_field_tag 'game[score][]', '', class: 'form-control', placeholder: 'Punkty (Bramki)' %>
    </div>
  </div>
  <div class="col col-xs-3">
    <div class="input-group">
      <%= text_field_tag 'game[result][]', '', class: 'form-control', placeholder: 'Rezultat' %>
    </div>
  </div>
  <div class="col col-xs-3">
    <div class="input-group">
      <%= text_field_tag 'game[additional_info][]', '', class: 'form-control', placeholder: 'Dodatkowe info' %>
    </div>
  </div>
</div>
