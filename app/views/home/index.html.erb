<% if current_user %>
  <div class="row">
    <div class="col col-xs-12">
      <h1>5 ostatnich partii</h1>
      <ul>
        <% @games.each do |game| %>
          <li>
            <%= game.title.name %>
             - <%= game.played_at.strftime('%d-%m-%Y') %>
             - Punkty: <%= game.score['Szczepan'] %>
             - <%= game.result['Szczepan'].to_s.upcase %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col col-xs-12">
      <h1>Moje ulubione gry</h1>
      <% @favorites.each do |fav| %>
        <div class="row">
          <div class="col col-xs-12">
            <span>
              <%= fav.title.name %>
            </span>
            <span>
              - <%= link_to 'Dodaj partiÄ™', new_game_path(title_id: fav.title.id) %>
            </span>
            <span>
              - Rozegrano gier: <%= fav.played_games %>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
