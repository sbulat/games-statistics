<%= form_for @title do |f| %>
  <div class="row">
    <div class="col col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><%= f.label :name, 'Nazwa' %></span>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Nazwa' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col col-xs-12">
      <%= f.label :score_type, 'Typ wyniku' %>
      <%= f.select :score_type, score_type_select %>
    </div>
  </div>
  <div class="row">
    <div class="col col-xs-12">
      <%= f.submit 'Zapisz', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
