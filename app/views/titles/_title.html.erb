<div class="row">
  <div class="col col-3">
    <%= link_to title.name, title_path(title.id) %>
  </div>
  <div class="col col-5">
    Ulubiony: <%= overall_favs(title.id) %> graczy | Rozegrano gier ogółem: <%= title.games.count %>
  </div>
  <div class="col col-4">
    <% if current_user %>
      <% if current_user.admin? %>
        <%= link_to 'Akceptuj', accept_title_path(title.id), method: :post unless title.accepted? %>
        <%= link_to 'Edytuj', edit_title_path(title.id) %>
      <% end %>

      <%= link_to 'Dodaj do ulubionych', favorite_title_path(title.id), method: :post unless current_user.like?(title.id) %>
      <%= link_to 'Dodaj partię', new_game_path(title_id: title.id) %>
    <% end %>
  </div>
</div>
