<div class="row container">
  <div class="col col-12">
    <h1>Lista tytułów</h1>

    <div class="row main-row">
      <div class="col col-3">
        Nazwa
      </div>
      <div class="col col-5">
        Informacje
      </div>
      <div class="col col-4">
        Akcje
      </div>
    </div>

    <div class="row main-row">
      <div class="col col-12">
        <%= render @titles %>
      </div>
    </div>

    <div class="row main-row">
      <div class="col col-12 digg_pagination">
        <%= will_paginate @titles %>
      </div>
    </div>

    <% if can? :create, Title %>
      <div class="row main-row">
        <div class="col col-12">
          <p>
            Brakuje tytułu? <%= link_to 'Dodaj go!', new_title_path %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>


